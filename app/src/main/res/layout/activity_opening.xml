<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asphalt_gray"
    tools:context=".OpeningActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/opening_gif"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/opening_txt_header"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/opening_txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-medium"
        android:text="Obstacle Race Game 2.0"
        android:textColor="@color/black"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/arrows_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@id/opening_txt_header">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/opening_button_arrows_mode_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opening_txt_header"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/blue_300"
            android:text="Arrows - Slow" />

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/opening_button_arrows_mode_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opening_txt_header"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/blue_300"
            android:text="Arrows - Fast" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/opening_button_sensor_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrows_layout"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/blue_300"
        android:text="Sensors" />


</RelativeLayout>